name: Generate Doxygen Docs
on:
 push:
   branches:
     - main
jobs:
 build-docs:
   runs-on: ubuntu-latest
   steps:
     - name: Checkout repository
       uses: actions/checkout@v2
     - name: Generate Doxygen Documentation
       uses: mattnotmitt/doxygen-action@v1.12.0
       with:
         working-directory: '.'
         doxyfile-path: './Doxyfile'
